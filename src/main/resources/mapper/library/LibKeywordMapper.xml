<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.avantport.cat.service.lib.mapper.LibKeywordMapper">
  <resultMap id="BaseResultMap" type="com.avantport.cat.service.lib.domain.LibKeyword">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="keyword_name" jdbcType="VARCHAR" property="keywordName" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
  </resultMap>
  <sql id="Base_Column_List">
    id, keyword_name, create_time
  </sql>
  <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from lib_keyword
    where id = #{id,jdbcType=BIGINT}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
    delete from lib_keyword
    where id = #{id,jdbcType=BIGINT}
  </delete>
  <insert id="insert" parameterType="com.avantport.cat.service.lib.domain.LibKeyword">
    insert into lib_keyword (id, keyword_name, create_time
      )
    values (#{id,jdbcType=BIGINT}, #{keywordName,jdbcType=VARCHAR}, CURRENT_TIMESTAMP
      )
  </insert>
  <insert id="insertSelective" parameterType="com.avantport.cat.service.lib.domain.LibKeyword">
    insert into lib_keyword
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="id != null">
        id,
      </if>
      <if test="keywordName != null">
        keyword_name,
      </if>
      CURRENT_TIMESTAMP
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="id != null">
        #{id,jdbcType=BIGINT},
      </if>
      <if test="keywordName != null">
        #{keywordName,jdbcType=VARCHAR},
      </if>
      CURRENT_TIMESTAMP
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.avantport.cat.service.lib.domain.LibKeyword">
    update lib_keyword
    <set>
      <if test="keywordName != null">
        keyword_name = #{keywordName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null">
        create_time = #{createTime,jdbcType=TIMESTAMP},
      </if>
    </set>
    where id = #{id,jdbcType=BIGINT}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.avantport.cat.service.lib.domain.LibKeyword">
    update lib_keyword
    set keyword_name = #{keywordName,jdbcType=VARCHAR},
      create_time = #{createTime,jdbcType=TIMESTAMP}
    where id = #{id,jdbcType=BIGINT}
  </update>

  <select id="selectKeywordList" parameterType="com.avantport.cat.service.lib.domain.LibKeyword"   resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from lib_keyword
    where  1 = 1
    <if test="keywordName != null">
      AND keyword_name like concat('%', #{keyword_name}, '%')
    </if>
    order by create_time
  </select>

  <select id="checkKeywordUnique"  resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from lib_keyword
    where keyword_name=#{keywordName} limit 1
  </select>

  <select id="checkKeywordExistFiles" parameterType="Long" resultType="int">
        select count(1) from lib_relation_info where keyword_id = #{id}
  </select>
</mapper>